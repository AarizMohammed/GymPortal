@model IEnumerable<GymPortal.Models.MemberSignupViewModel>
@{
    
    ViewData["Title"] = "All Registered Members";
}

<h2 class="text-center" style="margin-top:40px; color:#ffd700;">All Registered Members</h2>

@if (Model != null && Model.Any())
{
    @* Display all registered members in a Bootstrap table  *@
    
    <table class="table table-striped table-bordered" style="background-color:white; color:#333;">
        <thead class="table-dark">
    
            <tr>
    
    
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Membership Type</th>
                <th>Discount (%)</th>
            </tr>
        
        
        </thead>
        
        <tbody>
            @foreach (var member in Model)
            {
                
                
                <tr>
                    
                    <td>@member.Name</td>
                    <td>@member.Age</td>
                    <td>@member.Email</td>
                    
                    <td>@member.Phone</td>
                    <td>@member.MembershipType</td>
                    
                    
                    <td>@member.Discount</td>
                </tr>
            }
        
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        No members have signed up yet.
    </div>
}