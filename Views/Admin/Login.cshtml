


@{ ViewData["Title"] = "Admin Login";
}

<div>
   
   <h2 style="text-align:center; color:#309bc8; margin-top:40px;">Admin Login</h2>
    @if (ViewBag.Error != null)
   
    {
   
        <div style="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
        <div style="margin-bottom:15px;">
            <label for="username" style="display:block; margin-bottom:5px; font-weight:bold;">Username</label>
            <input type="text" name="username" placeholder="Username" required style="width:100%; padding:10px; border-radius:5px; border:1px solid #ccc;" />
        </div>
       
        <div style="margin-bottom:15px;">
            <label for="password" style="display:block; margin-bottom:5px; font-weight:bold;">Password</label>
       
            <input type="password" name="password" placeholder="Password" required style="width:100%; padding:10px; border-radius:5px; border:1px solid #ccc;" />
        </div>
       
        <button type="submit" style="width:100%; background:#2c5364; color:#fff; font-size:1.1rem; padding:10px 0; border:none; border-radius:6px; cursor:pointer;">Login</button>
    </form>
</div>
